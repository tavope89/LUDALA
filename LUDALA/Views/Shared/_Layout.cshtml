<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <script src="~/Scripts/json3.js"></script>
        <script src="~/Scripts/LUDALA.js"></script>
        <link href="~/Content/jquery-ui/redmond/jquery-ui.css" rel="stylesheet" />
        <link href="~/Content/jquery-ui/redmond/jquery-ui-1.8.14.custom.css" rel="stylesheet" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Página Inicial", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Noticias", "Index", "Home")</li>
                            <li>@Html.ActionLink("Entretenimiento", "Entretenimiento", "Home")</li>
                            <li>@Html.ActionLink("Deportes", "Deportes", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - MVC Application by Gustavo Peréz Espinoza</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
